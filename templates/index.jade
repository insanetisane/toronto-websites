.container
  ul.nav.nav-justified
    each post in collections.posts
      li.mb1.menu-item(class={active: link == post.link})
        a(href=post.link) #{post.title}

  main.global-main
    form.clearfix.form(netlify, name="email_form", action="about.html")
      input(type="hidden", name="_next", value="/?email=sent")
      input(type="hidden", name="_subject", value="New submission!")
      input(type="hidden", name="_cc", value="dillon@codebrewers.ca")
      input(type="text", name="_gotcha", style="display:none")

      .form-group
        label Name
        input.form-control(type="text", name="name" placeholder="Name")

      .form-group
        label Email

        input.form-control(type="email", name="email" placeholder="Email")
      input.btn.btn-danger(type="submit" value="Send")

  if partialData
    include _partial

include _footer
