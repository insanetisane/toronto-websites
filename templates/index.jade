header.global-header.m1
  nav(role="navigation").navbar.navbar-default.global-nav
    .navbar-header
      button(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse").navbar-toggle.collapsed
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a(href="#" ).navbar-brand Metalsmith Template
    .collapse.navbar-collapse.navbar-ex1-collapse
      ul.nav.navbar-nav
        each page in collections.pages
          li.menu-item(class={active: link == page.link})
            a(href=page.link) #{page.title}

.jumbotron
  .container
    h1 #{title}
